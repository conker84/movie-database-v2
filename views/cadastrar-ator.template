{> layout /}

{<title} {pageTitle} {/title}

{<main}
	<form id="actor-form">
		<div class="row">
			<div class="large-12 columns">
				<label for="name">Nome:</label> <input type="text" name="name" id="name" />
			</div>
		</div>

		<div class="row">
			<div class="large-12 columns">
				<label for="dateOfBirth">Data de nascimento:</label> <input type="date" name="dateOfBirth" id="dateOfBirth" />
			</div>
		</div>


		<div class="row">
			<div class="large-6 columns">
				<label for="placeOfBirth">Local de nascimento:</label> <input type="text" name="placeOfBirth" id="placeOfBirth" />
			</div> 
		</div>

		<div class="row">
			<div class="large-6 columns">
				<label for="filmography">Filmes:</label> 
				<input type="text" name="filmography1" id="filmography1" class="filmography" />
				<input type="text" name="filmography2" id="filmography2" class="filmography" />
				<input type="text" name="filmography3" id="filmography3" class="filmography" />
			</div> 
		</div>

		<div class="row">
			<div class="large-6 columns">
				<input type="submit" value="Cadastrar" />	
			</div>
		</div>	
	</form>

{/main}	

{<scripts}
	<script src="/javascripts/addActor.js"></script>
{/scripts}	